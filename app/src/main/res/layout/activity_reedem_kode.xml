<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:gravity="center"
    android:background="@color/white"
    tools:context=".ReedemKode">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4.5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorDominant">

                    <ImageView
                        android:id="@+id/buttonback"
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="4dp"
                        app:srcCompat="?android:attr/actionModeCloseDrawable" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentTop="true"
                android:layout_weight="2"
                app:srcCompat="@drawable/produk3" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/imageView"
                android:layout_weight="4"
                android:gravity="center"
                android:text="SGM Eksplor dengan Buah dan Sayur  [800 g]"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5">


        <Button
            android:id="@+id/btnreedem"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_below="@+id/poinreedem"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="Redeem"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/poinreedem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="2000"
            android:textColor="@color/colorDominant"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="23dp"
            android:layout_toEndOf="@+id/poinreedem"
            android:layout_toRightOf="@+id/poinreedem"
            android:text="points"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="30dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="83dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toStartOf="@+id/poinreedem"
            android:layout_toLeftOf="@+id/poinreedem"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/logosgmfix" />
    </RelativeLayout>
</LinearLayout>