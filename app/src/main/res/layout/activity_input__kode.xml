<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".Input_Kode">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/bgpopup"
        android:background="@color/bgpopup"
        android:layout_width="200dp"
        android:layout_height="160dp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="206dp"
        android:layout_marginBottom="9dp"
        android:text="Masukkan Kode"
        app:layout_constraintBottom_toTopOf="@+id/inputcode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/enterkode"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:layout_below="@id/inputcode"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:text="Enter" />

            <EditText
                android:background="@color/white"
                android:maxLength="8"
                android:layout_below="@id/title"
                android:id="@+id/inputcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>