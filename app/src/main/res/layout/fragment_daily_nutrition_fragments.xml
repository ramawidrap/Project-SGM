<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colornutrivisongelap"
        tools:context=".fragments.DailyNutritionFragments">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/judulresult"
                android:textColor="@color/white"/>
            <LinearLayout
                android:id="@+id/calories"
                android:layout_margin="3dp"
                android:layout_below="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/caloriestext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="1600 Calories"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/protein"
                android:layout_margin="3dp"
                android:layout_below="@+id/calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/proteintext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="3 - 5 Ounces"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fruits"
                android:layout_margin="3dp"
                android:layout_below="@+id/protein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protein"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/fruitstext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="1 - 1.5 Cups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/vegetables"
                android:layout_margin="3dp"
                android:layout_below="@+id/fruits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetables"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/vegetablestext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="1.5 - 2.5 Cups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/grains"
                android:layout_margin="3dp"
                android:layout_below="@+id/vegetables"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grains"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/grainstext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="4 - 6 Ounces"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dairy"
                android:layout_margin="3dp"
                android:layout_below="@+id/grains"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dairy"
                        android:textStyle="italic"/>

                    <TextView
                        android:id="@+id/dairytext"
                        android:minWidth="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="3 Cups"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>
    </FrameLayout>
</ScrollView>
